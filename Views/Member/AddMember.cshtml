@model Member
@{
    ViewBag.Title = "AddMember";
}
<br />
<h1>Add_New_Member</h1>
<div class="show-trainee">
  
        @using (Html.BeginForm("AddMember", "Member", FormMethod.Post, htmlAttributes: new
        { @name = "validate", enctype = "multipart/form-data" }))
        {
            if (Model != null)
            {
                @Html.HiddenFor(pp => pp.MemberId)
            }
            <div class="admin">
                <div class=" form-group col-md-6">
                    @Html.LabelFor(pp => pp.FirstName, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-10">
                        @Html.EditorFor(pp => pp.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(pp => pp.FirstName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group col-md-6">


                    @Html.LabelFor(pp => pp.SocilID, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-10">
                     
                        @Html.EditorFor(pp => pp.SocilID, new { htmlAttributes = new { @name = "social", @class = "form-control" } })
                        @Html.ValidationMessageFor(pp => pp.SocilID, "", new {   @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <label for="file" class="col-sm-2 col-form-label">SocialPhoto</label><br />
                    <input type="file" id="file" name="File" required />
                </div>
                <input type="submit" style="margin-left: 241px; margin-top: 18px;" class="  submit  form-group btn btn-outline-info" />
            </div>
       
    }

</div>
